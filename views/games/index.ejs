<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head/_head", {page: "Events"}) %> 
  <body class="has-navbar-fixed-top">
  <%- include("../partials/nav/_nav", { routes }) %> 
  
  <main class="container is-max-widescreen">
    <div class="columns is-multiline p-6">
      <!-- tell user if no products exist -->
      <% if(games.length === 0) { %> 
        <div class="notification is-warning">
          No Games Available At This Time
        </div>
      <% } %> 
      <!-- loop through all the products -->
      <% for(let idx = 0; idx < games.length; idx++){ %> <% const games =
      games[idx] %>
      <div class="column is-one-third">
        <article class="card">

          <div class="card-content">
            <div class="content">
              <h3>
                <a href="/games/<%= games.id %>"><%= games.title %> </a>
              </h3>
              <p><%= games.content %>$</p>
            </div>
          </div>
        </article>
      </div>
      <% } %>
    </div>
  </main>

  <section class="hero is-small is-dark">
    <div class="hero-body">
      <h2 class="title">Events</h2>
    </div>
  </section>

    
      
    <form action="/games/new" method="GET">
      <input class="button" type="submit" value="New Game" />
    </form>
      

  </body>  
</html>